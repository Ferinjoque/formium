<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<!-- ADMIN PEDIDOS VIEW -->
<VBox spacing="10.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.controlador.AdminPedidosControlador">

    <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/></padding>

    <children>
        <!-- TÍTULO -->
        <Label styleClass="content-title"
               text="Historial de Todos los Pedidos"/>

        <!-- LISTA DE PEDIDOS -->
        <ListView fx:id="listaTodosPedidos" VBox.vgrow="ALWAYS"/>

        <!-- BOTONERA DE ACCIONES -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label styleClass="sidebar-label" text="Acciones:"/>

                <Button fx:id="btnProcesarPedido"
                        disable="true"
                        onAction="#handleProcesarPedido"
                        text="Procesar"/>

                <Button fx:id="btnEnviarPedido"
                        disable="true"
                        onAction="#handleEnviarPedido"
                        text="Enviar"/>

                <Button fx:id="btnEntregarPedido"
                        disable="true"
                        onAction="#handleEntregarPedido"
                        text="Entregar"/>

                <!-- Separador flexible -->
                <Pane HBox.hgrow="ALWAYS"/>

                <Button fx:id="btnCancelarPedido"
                        disable="true"
                        onAction="#handleCancelarPedido"
                        styleClass="delete-button"
                        text="Cancelar Pedido"/>
            </children>

            <VBox.margin><Insets top="10.0"/></VBox.margin>
        </HBox>
    </children>
</VBox>
