<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- ADMIN INVENTARIO VIEW -->
<SplitPane dividerPositions="0.6"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ui.controlador.AdminInventarioControlador">

    <items>
        <!-- LISTA DE PRODUCTOS -->
        <VBox spacing="10.0">
            <children>
                <Label styleClass="sidebar-title" text="Stock Actual de Productos"/>
                <TableView fx:id="tablaInventario" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId"       prefWidth="50.0"  text="ID"/>
                        <TableColumn fx:id="colProducto" prefWidth="280.0" text="Producto"/>
                        <TableColumn fx:id="colTipo"     prefWidth="100.0" text="Tipo"/>
                        <TableColumn fx:id="colPrecio"   prefWidth="100.0" text="Precio Base"/>
                        <TableColumn fx:id="colStock"    prefWidth="100.0" text="Stock Actual"/>
                    </columns>
                </TableView>
            </children>
            <padding><Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/></padding>
        </VBox>

        <!-- FORMULARIO REPOSICIÓN -->
        <VBox alignment="CENTER_LEFT" spacing="15.0">
            <children>
                <Label styleClass="content-title" text="Reponer Stock"/>
                <Label fx:id="lblProductoSeleccionado"
                       text="Por favor, selecciona un producto de la tabla."/>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Cantidad a Añadir:"/>
                        <TextField fx:id="txtCantidadReponer" prefWidth="100.0"/>
                    </children>
                </HBox>
                <Button fx:id="btnReponerStock"
                        disable="true"
                        onAction="#handleReponerStock"
                        styleClass="confirm-button"
                        text="Reponer Stock"/>
            </children>
            <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/></padding>
        </VBox>
    </items>
</SplitPane>
